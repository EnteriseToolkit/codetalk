<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" > <!-- used to have: android:minHeight="?android:attr/listPreferredItemHeight" -->

    <TextView
        android:id="@+id/message_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="@dimen/date_right_margin"
        android:paddingTop="@dimen/date_top_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/faded_text"
        android:textIsSelectable="false"
        android:textSize="11sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/message_info"
        android:paddingBottom="@dimen/message_vertical_margin"
        android:paddingLeft="@dimen/message_left_margin"
        android:paddingRight="@dimen/message_right_margin"
        android:paddingTop="@dimen/message_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="?android:textColorPrimary"
        android:textColorLink="@color/message_link"
        android:textIsSelectable="false"
        android:textSize="18sp" />

</RelativeLayout>